<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:id="@+id/LinearLayout"
android:background="#ffffff"> 

  <TextView android:text="Cadastrar Portal" 
  android:textSize="18sp" 
  android:gravity="center" 
  android:textStyle="bold"
  android:textColor="#000000"
  android:layout_height="wrap_content" 
  android:layout_width="fill_parent"/>
      
    <ScrollView
    android:id="@+id/scrollview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">

      <LinearLayout
      android:id="@+id/LinearLayout"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
  
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="20px"/>
  
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Nome:"/>
  
        <EditText android:id ="@+cad/nome"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
  
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="#000000"
        android:text="EndereÃ§o:"/>
  
        <EditText android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+cad/endereco"/>
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000" 
        android:text="Usuario:"/>
  
        <EditText android:text=""
        android:layout_height="wrap_content"
        android:id="@+cad/usuario" 
        android:layout_width="200px"/>
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000" 
        android:text="Senha:"/>
  
        <EditText android:text=""
        android:layout_height="wrap_content"
        android:id="@+cad/senha" 
        android:layout_width="200px" 
        android:password="true"/>
        
        <TextView android:text="" 
        android:id="@+cad/espaco" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
        </TextView>
        
        <TextView android:text="" 
        android:id="@+cad/result" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
        </TextView>
  
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="20px"/>
        
      </LinearLayout>
    </ScrollView>
  
  <LinearLayout
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:baselineAligned="true" 
  android:gravity="center">
    
    <Button
    android:text="Cadastrar"
    android:layout_height="50px" 
    android:layout_width="120px" 
    android:id="@+cadastro/btnCadastrar"/>
    
    <Button
    android:layout_width="120px" 
    android:layout_height="50px" 
    android:id="@+cadastro/btnSair" 
    android:text="Sair"/>
  
  </LinearLayout>
</LinearLayout>
