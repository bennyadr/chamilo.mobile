<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:id="@+id/LinearLayout"
android:background="#ffffff"> 
      
  <ScrollView
  android:id="@+id/scrollview"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:layout_weight="1">

    <LinearLayout
    android:id="@+id/LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
        
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent" 
      android:layout_height="10px"/>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Nome:"/>
        
        <TextView android:id ="@+mostra/nome"
        android:textColor="#FF4500"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
        
      </LinearLayout>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="#000000"
        android:text="EndereÃ§o:"/>
        
        <TextView android:textColor="#FF4500"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+mostra/endereco"/>
      
      </LinearLayout>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="#000000"
        android:text="Usuario:"/>
        
        <TextView
        android:textColor="#FF4500"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+mostra/usuario"/>
      
      </LinearLayout>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="#000000"
        android:text="Senha:"/>
        
        <TextView
        android:textColor="#FF4500"
        android:text=""
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:id="@+mostra/senha"/>
      
      </LinearLayout>
      
      <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent" 
      android:layout_height="18px"/>
      
    </LinearLayout>
  </ScrollView>
  
  <LinearLayout
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:baselineAligned="true" 
  android:gravity="center">
    
    <Button
    android:layout_width="100px" 
    android:layout_height="50px" 
    android:id="@+lista/btnAnterior" 
    android:text="&lt;- Anterior"/>
    
    <Button
    android:layout_width="100px" 
    android:layout_height="50px" 
    android:id="@+lista/btnProximo" 
    android:text="Proximo -&gt;"/>
    
  </LinearLayout>
  
  <LinearLayout
  android:orientation="horizontal"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:baselineAligned="true" 
  android:gravity="center">
    
    <Button 
	android:text="Excluir" 
	android:id="@+lista/btnExcluir" 
	android:gravity="center" 
	android:layout_height="50px" 
	android:layout_width="120px"/>
    
    <Button
    android:layout_height="50px" 
    android:id="@+lista/btnVoltar" 
    android:gravity="center" 
    android:layout_width="120px" 
    android:text="Sair"/>
    
  </LinearLayout>
</LinearLayout> 

